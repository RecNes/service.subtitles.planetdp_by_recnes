<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.subtitles.planetdp_by_recnes"
       name="PlanetDP Subtitle add-on for KODI"
       version="1.0.0"
       provider-name="RecNes">
    <requires>
        <import addon="xbmc.python"                 version="2.14.0"/>
    </requires>
    <extension point="xbmc.subtitle.module" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">PlanetDP Subtitles</summary>
        <summary lang="en_US">PlanetDP Subtitles</summary>
        <summary lang="tr_TR">PlanetDP Altyazı</summary>

        <description lang="en_GB">Search and download subtitles for movies and TV-Series from planetdp.org.</description>
        <description lang="en_US">Search and download subtitles for movies and TV-Series from planetdp.org.</description>
        <description lang="tr_TR">Kodi için planetdp.org üzerinden zahmetsizce film ve diziler için alt yazı edinin.</description>

        <disclaimer lang="en_GB">Users need to provide PlanetDP.org username and password in add-on configuration</disclaimer>
        <disclaimer lang="en_US">Users need to provide PlanetDP.org username and password in add-on configuration</disclaimer>
        <disclaimer lang="tr_TR">Kullanıcılar, eklenti ayarlarına PlanetDP.org kullanıcı adı ve parola bilgilerini girmeleri gerekmektedir.</disclaimer>
        <news>
            v1.0.00 (2017-01-05) by RecNes
            - Inıtial version...
        </news>
        <platform>all</platform>
        <language></language>
        <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
        <forum>http://forum.planetdp.org/index.php?/topic/1362-kodi-için-altyazı-eklentisi/</forum>
        <website>http://www.recnes.com/</website>
        <email>planetdp_kodi _at_ recnes /dot/ com</email>
        <assets>
            <icon>resources/media/dp_logo_512x512.png</icon>
            <fanart>resources/media/dp_fanart.jpg</fanart>
            <screenshot>resources/media/screenshot_1.jpg</screenshot>
            <screenshot>resources/media/screenshot_2.jpg</screenshot>
            <screenshot>resources/media/screenshot_3.jpg</screenshot>
        </assets>
        <source>https://github.com/RecNes/service.subtitles.planetdp_by_recnes</source>
    </extension>
</addon>
